<div class="container-fluid">
    <div class="row">
        <div class="col-4 text-center" id="one">
            <div class="burgersToEat">
                <h2>Burgers Available To Eat!</h2>
                <ul>
                    {{#each burgers}}
                    {{#unless this.devoured}}
                    <li>
                        {{this.id}}
                        {{this.burger_name}}
                        <form class="devoured">
                            <input type="hidden" name="devoured" value="true">
                            <button class="btn-primary" id="devourIt" type="submit">Devour It!</button>
                        </form>
                    </li>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="col-4 text-center" id="two">
            <img src="/assets/images/burger.png">
            <h1>Eat-Da-Burger!</h1>
            <form class="addBurgerForm">
                <input type="text" name="burger_name" class="form-control" id="addburger">
                <br>
                <button type="submit" class="btn btn-primary blue" id="addBtn">Submit!</button>
            </form>
            <p><strong>Add a burger you want to eat!</strong></p>
            <br>
        </div>
        <div class="col-4 text-center" id="three">
            <div class="devoured">
                <h2>Devoured Burgers</h2>
                {{#each burgers}}
                    {{#if this.devoured}}
                        <li>
                            {{this.id}}
                            {{this.burger_name}}
                        </li>
                    {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
</div>