<div class="container-fluid">
    <div class="row">
        <div class="col-4 text-center" id="one">
            <div class="burgersToEat">
                <h2>Burgers Available To Eat!</h2>
                {{#each burgers}}
                    {{#unless this.devoured}}
                        <div>
                            <form action="/api/burgers/{{this.id}}?_method=PUT" method="POST">
                                <button class="btn-primary" id="devourIt" type="submit">{{this.burger_name}}</button>
                            </form>
                        </div>
                    {{/unless}}
                {{/each}}
            </div>
        </div>

        <div class="col-4 text-center" id="two">
            <img src="/assets/images/burger.png">
            <h1>Eat-Da-Burger!</h1>
            <form action="/api/burgers" method="POST">
                <input type="text" name="burger_name" class="form-control" id="addburger">
                <br>
                <button type="submit" class="btn btn-primary blue" id="addBtn">Submit!</button>
            </form>
            <p><strong>Add a burger you want to eat!</strong></p>
            <br>
        </div>

        <div class="col-4 text-center" id="three">
            <h2>Devoured Burgers</h2>
            {{#each burgers}}
                {{#if this.devoured}}
                    <div class="devoured">
                        <div>
                            {{this.burger_name}}
                        </div>
                    </div>
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>
